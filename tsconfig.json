{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2020",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "sourceMap": true,
        "types": ["vite/client"],
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM"]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.tsx",
        "resources/**/*.vue",
        "auto-imports.d.ts",
        "components.d.ts",
        "vite.config.ts"
    ],
    "exclude": ["node_modules"],
    "vueCompilerOptions": {
        "skipTemplateCodegen": true
    }
}
